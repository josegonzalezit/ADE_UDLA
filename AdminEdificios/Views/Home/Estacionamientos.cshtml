@model IEnumerable<AdminEdificios.Estacionamientos>

@{
    ViewBag.Title = "Estacionamientos";
}

<h2>Estacionamientos</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EstacionamientoId) 
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Piso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
